{
    "title": "Container Overview",
    "uid": "container-overview",
    "schemaVersion": 38,
    "version": 1,
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "panels": [
        {
            "type": "timeseries",
            "title": "CPU % (app container)",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{image=\"docker.io/library/demo-app:latest\"}[1m])) * 100",
                    "legendFormat": "app"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Memory MiB (app container)",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "container_memory_usage_bytes{image=\"docker.io/library/demo-app:latest\"} / 1024 / 1024",
                    "legendFormat": "app"
                }
            ]
        },
        {
            "title": "HTTP Requests per Second",
            "type": "timeseries",
            "gridPos": {
                "h": 6,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "targets": [
                {
                    "expr": "sum(rate(http_server_requests_seconds_count{job=\"app\"}[1m]))",
                    "legendFormat": "RPS"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ops"
                }
            }
        },
        {
            "type": "timeseries",
            "title": "Average HTTP Latency (ms)",
            "gridPos": {
                "x": 12,
                "y": 8,
                "h": 6,
                "w": 12
            },
            "targets": [
                {
                    "expr": "1000 * (sum(rate(http_server_requests_seconds_sum{job=\"app\"}[1m])) / sum(rate(http_server_requests_seconds_count{job=\"app\"}[1m])))",
                    "legendFormat": "avg (1m)",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ms",
                    "decimals": 2
                },
                "overrides": []
            },
            "options": {
                "legend": {
                    "showLegend": true,
                    "displayMode": "list",
                    "placement": "bottom"
                },
                "tooltip": {
                    "mode": "single",
                    "sort": "none"
                }
            }
        }
    ]
}